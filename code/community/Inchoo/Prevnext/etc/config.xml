<config>
    <modules>
        <Inchoo_Prevnext>
            <version>1.0.0.0</version>
        </Inchoo_Prevnext>
    </modules>
    <global>
        <models>
            <inchoo_prevnext>
                <class>Inchoo_Prevnext_Model</class>
            </inchoo_prevnext>
        </models>
        <helpers>
            <inchoo_prevnext>
                <class>Inchoo_Prevnext_Helper</class>
            </inchoo_prevnext>
        </helpers>
        <blocks>
            <inchoo_prevnext>
                <class>Inchoo_Prevnext_Block</class>
            </inchoo_prevnext>
        </blocks>
    </global>
    <frontend>
        <events>
            <controller_action_postdispatch>
                <observers>
                    <inchoo_prevnext_set_filtered_category_product_collection>
                        <class>inchoo_prevnext/observer</class>
                        <method>setInchooFilteredCategoryProductCollection</method>
                    </inchoo_prevnext_set_filtered_category_product_collection>
                </observers>
            </controller_action_postdispatch>
        </events>
        <layout>
            <updates>
                <inchoo_prevnext>
                    <file>prevnext.xml</file>
                </inchoo_prevnext>
            </updates>
        </layout>
    </frontend>
</config>
